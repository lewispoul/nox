# Development Dockerfile for Nox API v7.0.0
# Optimized for development with hot reload and debugging

FROM python:3.11-alpine

# Install development dependencies
RUN apk add --no-cache \
    gcc \
    musl-dev \
    libffi-dev \
    postgresql-dev \
    curl \
    git \
    vim \
    && rm -rf /var/cache/apk/*

# Set environment variables for development
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# Create development user (non-root but with more permissions)
RUN addgroup -g 1001 -S noxdev && \
    adduser -S -D -H -u 1001 -h /app -s /bin/sh -G noxdev -g noxdev noxdev

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip wheel setuptools && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    pytest-cov \
    black \
    isort \
    flake8 \
    debugpy

# Create logs directory
RUN mkdir -p /app/logs && chown -R noxdev:noxdev /app

# Switch to development user
USER noxdev

# Expose ports (API + debugger)
EXPOSE 8082 5678

# Health check (more lenient for development)
HEALTHCHECK --interval=60s --timeout=30s --start-period=10s --retries=2 \
    CMD curl -f http://localhost:8082/api/v7/auth/health || exit 1

# Default command with reload enabled
CMD ["uvicorn", "nox_api_v7_fixed:app", "--host", "0.0.0.0", "--port", "8082", "--reload"]
